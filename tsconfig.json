{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ES2015", "ES2016", "ES2018"], //libs js que terão recursos disponíveis
    "experimentalDecorators": true, //obrigatório para typeorm
    "emitDecoratorMetadata": true, //obrigatório para typeorm
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true, //forçar tipagem
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "files": true
  }
}
